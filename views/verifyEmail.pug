extends ./layout/index

block content
    if(email.error)
        span #{email.error}
    
    if(email.success)
        span #{email.success}
        p redirecting to home in 
            span(id="num") 
        script.
            var time = document.getElementById("num");
            async function p(){
                for(i=10;i>=0;i--){
                    time.innerHTML=i+" sec";
                    await new Promise(r => setTimeout(r, 1000));
                }
                window.location="http://localhost:4000/"
            }
            
            p();
            

            